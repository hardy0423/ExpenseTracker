@model ExpenseTracker.Models.Product

@{
    ViewData["Title"] = "Supprimer produit";
}

<h1>Supprimer produit</h1>

<h4>Êtes-vous sûr de vouloir supprimer ce produit ?</h4>

<div>
    <h5>@Model.Name</h5>
    <p>@Model.Description</p>
    <p><strong>Prix: </strong>@String.Format("{0:C}", Model.Price)</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>