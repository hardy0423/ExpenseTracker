@model ExpenseTracker.Models.Product

@{
    ViewData["Title"] = "Détails produit";
}

<h1>Détails produit</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@String.Format("{0:C}", Model.Price)</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Créé le</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</p>